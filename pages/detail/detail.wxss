/* pages/detail/detail.wxss */
.contain_detail_cnt{
  width: 100%;
  height: 100%;
}
.box-title{
  padding: 25px 20px;
  background: #f9f9f9;
}
.detail-title{
  line-height: 25px;
  font-size: 18px;
  color: #000;
  font-weight: 600;
  text-align: center;
}

.detail-containter{
  line-height: 1.8em;
  margin: 20px 0;
  font-size: 14px;
  color: #666;
  
}
.detail-img{
  width: 100%;
  height: 270px;
  margin: 10px 0;
  display: block;
}
.detail-content{
  padding: 0 20px 10px;

}


.comments-containter{
  margin-bottom: 20px;
}
.comment-tittle{
  font: 14px;
  font-weight: bold;
  padding: 10px;
  text-align: center;
  display: block;
}
.comment-box{
  position: relative;
  padding: 10px;
  min-height: 40px;
  margin-top: 10px;
}

.avatar{
  position: absolute;
  left: 10px;
  top: 10px;
  width: 40px;
  height: 40px;
}

.avatar image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
  border: 1px solid #f2f2f2;
}
.comment-main{
  margin-left: 50px;
}
.comment-author{
  margin-bottom: 6px;
  color: #999;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
}
.likes{
  float: right;
  font-weight: normal;
  line-height: 20px;
  
}
.content{
  color: #666;
  line-height: 20px;
  display: block;
}
.time{
  height: 18px;
  margin-top: 5px;
  line-height: 18px;
  font-size: 12px;
  color: #999;
}



.interaction{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 40px;
  border-top: 1px solid #f2f2f2;
  background: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  width: 100%;
}

.interaction-comment{
  width: 50%;
  height: 20px;
  margin: 10px;
  font-size: 13px;
  font-weight: 300;
  line-height: 20px;
  padding: 0 6px;
  border-left: 2px solid #48c23d;
  color: #444;
}
.interaction-comment-placeholder{
  font-size: 13px;
  font-weight: 300;
  color: #999;
}
.interaction-others{
  position: absolute;
  right: 5px;
  width: 50%;
  top: 5px;
}

.interaction-others image{
  height: 20px;
  width: 20px;
  margin: 10px 15px;
  float: right;
}

.share-box{
  display: none;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.share-box-show{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -210px;
  height: 200px;
  background: #fff;
  z-index: 2;
}
.share-method{
 padding: 10px 20px;
  width: 240px;
  margin: 0 auto;
  overflow: hidden;
}

.share-method image{
 width: 40px;
 height: 40px;
 padding: 10px;
 margin: 5px 10px;
 float: left;
}

.share-close{
  width: 100%;
  background: #f5f5f5;
  text-align: center;
  line-height: 40px;
  font-size: 14px;
  bottom: 0;
}

.share-box-opacity{
  opacity: 0;
  background: #000;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}