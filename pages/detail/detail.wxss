/* pages/detail/detail.wxss */
.contain_detail_cnt{
  width: 100%;
  height: 100%;
}
.box-title{
  padding: 25px 20px;
  background: #f9f9f9;
}
.detail-title{
  line-height: 25px;
  font-size: 18px;
  color: #000;
  font-weight: 600;
  text-align: center;
}
.detail-containter{
  height: 100%;
  display: block;
  
}
.detail-img{
  width: 100%;
}
.detail-content{
  height: 40px;

}


.comments-containter{
  display: block;
  margin-top: 10px;
  position: relative;
  height: 80px;
  font-size: 12px;
}
.avatar{
  position: absolute;
  width: 40px;
  height: 40px;
}

.avatar image{
  height: 100%;
  width: 100%;
}
.comment-main{
  margin-left: 42px;

}

.likes{
  float: right;
}

.interaction{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 44px;
  border: 2px solid yellowgreen;
  display:flex;
  flex-direction: row;
}

.input{
  flex: 2;
}
.interaction-others{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.interaction-others image{
  height: 30px;
  width: 30px;
}

.share-box{
  height: 120px;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.share-method{
  /* height: 100%; */
  height: 80px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}

.share-method image{
  height: 44px;
  width: 44px;
}