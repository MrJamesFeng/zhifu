/* pages/home/home.wxss */
.typeChooseContainer{
  height: 30px;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #f4f4f4;
}
 
.typeChooseContainer view{
  margin: 0 20px;
  padding: 0 4px;
  font-size: 28rpx;
}

.on{
  border-bottom: 1px solid #48c23d;
  color: #48c23d;
}
.hot-box{
display: block;
height: 100%;
}
.swiper-box{
  height: 200px;
  background-color: #f2f2f2;
}
.columns_box{
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.top_storie_image{
  width: 100%;
  height: 200px;
  display: block;
  position: relative;
}
.columnContainer{
  font-size: 15px;
  padding: 16px 0;
  text-align: center;
  background: #f9f9f9;
}
.columnTitle{
  font-size: 16px;
  font-weight: bold;
  display: block;
}
.columnSubTitle{
  font-size: 12px;
  font-weight: 500;
  margin-top: 14px;

}

.columnsContainer{
  margin-bottom: 20px;
  background: #fff;

}
.others{
  position: relative;
  border-bottom: 1px solid #f2f2f2;
  /* border: 1px solid #f2f2f2; */
  /* margin-bottom: 20px; */
  display: block;
}
.avtar{
  top: 16px;
  left: 20px;
  width: 40px;
  height: 40px;
  position: absolute;
  overflow: hidden;
}
.avtar_image{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.content{
  padding: 16px 20px;
  margin-left: 50px;
}
.name{
  font-size: 14px;
  color: #444;
  height: 20px;
  lighting-color: 20px;
  overflow: hidden;
}

.description{
  font-size: 12px;
  color: #999;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
}
.hot-box{
  margin-bottom: 10px;
  height: 100%;
}
.hot-main{
  background: #fff;
  height: 50px;
  padding: 30px 20px;
  position: relative;
  background: url("https://pic4.zhimg.com/60b69ef145a472f2c6b5302453f95eaa.jpg");
  background-size: cover;
}
.hot-main-box{
  margin-bottom: 20px;
  overflow: hidden;
  /* background: #fff; */
}
.hot-box-top{
  padding: 20px 100px 20px 100px;
  border-bottom: 1px solid #f6f6f6;
  text-align: center;
}
.hot-main-title{
  font-size: 34rpx;
  color: #fff;
}
.hot-main-subTitle{
  color: #fff;
  font-size: 26rpx;
  margin-top: 4px;
}
.hot-main-box-title{
  font-size: 32rpx;
  height: 30px;
  line-height: 32px;
  font-weight: 400;
  color: #444;
  padding: 5px 10px;
  border: 1px solid #444;
}
.list-box{
  padding: 20px 20px 20px 40px;
  font-size: 30rpx;
  border-bottom: 1px solid #f6f6f6;
  position: relative;
}
.list-box::after{
  content: "";
  position: absolute;
  width: 6px;
  height: 6px;
  background: #ff6511;
  border-radius: 50%;
  top: 25px;
  left: 25px;
}
.list-box-title{
  font-weight: 400;
  line-height: 42rpx;
}

.list-box-sub{
  font-size: 24rpx;
  color: #666;
  padding-top: 6px;
}

